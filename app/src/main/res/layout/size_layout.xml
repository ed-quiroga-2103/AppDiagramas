<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/customborder">

    <TextView
        android:id="@+id/puntualText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Tamaño de la Viga"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puntualText"
        android:layout_centerHorizontal="true"
        android:id="@+id/xLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño:"
            android:layout_marginTop="20dp"
            android:id="@+id/xText"
            android:layout_toLeftOf="@+id/xAdd"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10sp"
            android:textSize="17dp"
            android:singleLine="true"
            />

    <EditText
        android:id="@+id/xAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Escriba el valor acá"
        android:textAlignment="center"
        android:inputType="phone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10sp"
        />

    </RelativeLayout>



    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:id="@+id/puntualButton"
        android:layout_below="@+id/xLayout"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>